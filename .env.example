# RENOMBRA a .env y completa los valores reales.
PORT=3000

# Postgres connection (puedes usar DATABASE_URL o detalles separados)
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=notas_db
PGPORT=5432

# SMTP (para nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your_email_password
FROM_EMAIL="Notas App" <you@example.com>

# Secret para cookies / hashes
COOKIE_SECRET=put_a_long_random_secret_here

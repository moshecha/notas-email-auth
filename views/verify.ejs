<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Verificar código</title>
</head>
<body style="font-family:system-ui,Arial;margin:40px;">
  <h2>Código enviado a <%= email %></h2>
  <p><%= message %></p>
  <form action="/auth/verify-code" method="post">
    <input type="hidden" name="email" value="<%= email %>"/>
    <label>Ingresa el código</label><br/>
    <input name="code" type="text" required style="padding:8px;width:200px;"/><br/><br/>
    <button type="submit">Verificar</button>
  </form>
  <p><a href="/">Volver</a></p>
</body>
</html>
